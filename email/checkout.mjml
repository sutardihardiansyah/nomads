        <mj-table color="#071C4D" font-size="28px" line-height="28px" font-family="Assistant, Aria, Helvetica, sans-serif" padding-left="25px" padding-right="25px">
          <tr>
            <td colspan="3">Travel Details</td>
          </tr>
          <tr>
            <td><stron>Departure</strong></td>
            <td style="text-align:right;">Nusa Penida</td>
          </tr>
          <tr>
            <td><stron>Date And Time</strong></td>
