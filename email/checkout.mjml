        <mj-button align="center" font-size="18px" font-weight="bold" background-color="#FF9E53" border-radius="10px" color="#FFF" font-family="Assistant, Aria, Helvetica, sans-serif">
          Check Detail
        </mj-button>

      </mj-column>
    </mj-section>

  </mj-body>
</mjml>