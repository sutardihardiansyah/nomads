<mjml>
  <mj-body background-color="#E4E6EB" font-size="13px">
    <mj-section background-color="#FFF" vertical-align="top" padding-bottom="0" padding-top="0" border-bottom="1px dashed #EEE">
      <mj-column width="100%" vertical-align="top">
        <mj-image src="images/logo@2x.png" alt="" align="center" border="none" width="150px" padding-left="0" padding-right="0" padding-bottom="25px" padding-top="30px" />
      </mj-column>
    </mj-section>
    <mj-section background-color="#FFF" vertical-align="top" padding-bottom="0" padding-top="0">
